<script>
    // گرفتن لینک دکمه و فایل CSS دارک مود
    const darkModeToggle = document.getElementById('darkModeToggle');
    const darkModeStylesheet = '/Site/assets/styles/style-dark.css'; // مسیر فایل دارک مود
    let darkModeEnabled = localStorage.getItem('darkMode') === 'enabled';

    // بررسی اینکه آیا دارک مود قبلاً فعال شده یا نه
    if (darkModeEnabled) {
        document.head.innerHTML += `<link rel="stylesheet" href="${darkModeStylesheet}" id="darkModeStylesheet">`;
        darkModeToggle.textContent = 'نسخه روشن';
    } else {
        darkModeToggle.textContent = 'نسخه تیره';
    }

    // تغییر حالت دارک مود هنگام کلیک روی دکمه
    darkModeToggle.addEventListener('click', (event) => {
        event.preventDefault(); // جلوگیری از رفتار پیش‌فرض لینک

        if (darkModeEnabled) {
            // حذف استایل دارک مود
            const darkModeLink = document.getElementById('darkModeStylesheet');
            if (darkModeLink) darkModeLink.remove();
            darkModeToggle.textContent = 'نسخه تیره';
            localStorage.setItem('darkMode', 'disabled');
        } else {
            // اضافه کردن استایل دارک مود
            const linkTag = document.createElement('link');
            linkTag.rel = 'stylesheet';
            linkTag.href = darkModeStylesheet;
            linkTag.id = 'darkModeStylesheet';
            document.head.appendChild(linkTag);
            darkModeToggle.textContent = 'نسخه روشن';
            localStorage.setItem('darkMode', 'enabled');
        }

        // تغییر وضعیت فعال بودن دارک مود
        darkModeEnabled = !darkModeEnabled;
    });
</script>

