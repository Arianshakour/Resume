@using Resume.DLA.ViewModels.Common
@model PagingViewModel

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="d-flex justify-content-center align-items-center" id="tableGroup_paginate">
            <label style="margin-top:30px; margin-left:10px;">تعداد نمایش در صفحه</label>
            <select id="takeEntityy" class="form-control d-inline-block w-auto" onchange="changeTakeEntity()" style="margin-top:30px; margin-left:10px;">
                <option disabled selected>انتخاب کنید</option>
                <option value="2">2</option>
                <option value="4">4</option>
                <option value="6">6</option>
            </select>
            <ul class="pagination mb-0 me-3">
                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    <li class="paginate_button page-item @(Model.Page==i?"active":"")">
                        <a onclick="fillPageId('@i')" aria-controls="tableGroup" data-dt-idx="@i" tabindex="0" class="page-link">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
