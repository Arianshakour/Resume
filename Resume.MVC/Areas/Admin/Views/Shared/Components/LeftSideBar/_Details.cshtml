@using Resume.DLA.ViewModels.User
@{
    UserDetailsViewModel t = ViewData["User"] as UserDetailsViewModel ?? new UserDetailsViewModel();
}
@* @model UserDetailsViewModel *@
<div>
    <aside id="leftsidebar" class="sidebar">
        <!-- Menu -->
        <div class="menu">
            <ul class="list">
                <li>
                    <div class="sidebar-profile clearfix">
                        <div class="profile-img">
                            <img src="/Admin/assets/images/usrbig.jpg" alt="profile">
                        </div>
                        <div class="profile-info">
                            <h3>@t.FirstName @t.LastName</h3>
                            <p>خوش آمدید !</p>
                        </div>
                    </div>
                </li>
                <li class="active">
                    <a href="#" onClick="return false;" class="menu-toggle">
                        <i class="menu-icon ti-user"></i>
                        <span>مدیریت کاربران</span>
                    </a>
                    <ul class="ml-menu">
                        <li class="active">
                            <a asp-area="Admin" asp-controller="User" asp-action="List">لیست کاربران</a>
                        </li>
                        <li class="active">
                            <a asp-area="Admin" asp-controller="User" asp-action="Create">افزودن کاربر</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#" onClick="return false;" class="menu-toggle">
                        <i class="menu-icon ti-user"></i>
                        <span>مدیریت تماس با ما</span>
                    </a>
                    <ul class="ml-menu">
                        <li class="active">
                            <a asp-area="Admin" asp-controller="ContactUs" asp-action="List">لیست تماس با ما</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#" onClick="return false;" class="menu-toggle">
                        <i class="menu-icon ti-user"></i>
                        <span>مدیریت درباره من</span>
                    </a>
                    <ul class="ml-menu">
                        <li class="active">
                            <a asp-area="Admin" asp-controller="AboutMe" asp-action="Edit">درباره من</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#" onClick="return false;" class="menu-toggle">
                        <i class="menu-icon ti-user"></i>
                        <span>مدیریت فعالیت های من</span>
                    </a>
                    <ul class="ml-menu">
                        <li class="active">
                            <a asp-area="Admin" asp-controller="Activity" asp-action="List">فعالیت های من</a>
                        </li>
                        <li class="active">
                            <a asp-area="Admin" asp-controller="Activity" asp-action="Create">افزودن فعالیت</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#" onClick="return false;" class="menu-toggle">
                        <i class="menu-icon ti-user"></i>
                        <span>مدیریت تحصیلات من</span>
                    </a>
                    <ul class="ml-menu">
                        <li class="active">
                            <a asp-area="Admin" asp-controller="Education" asp-action="List">تحصیلات من</a>
                        </li>
                        <li class="active">
                            <a asp-area="Admin" asp-controller="Education" asp-action="Create">افزودن تحصیلات</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#" onClick="return false;" class="menu-toggle">
                        <i class="menu-icon ti-user"></i>
                        <span>مدیریت شغل های من</span>
                    </a>
                    <ul class="ml-menu">
                        <li class="active">
                            <a asp-area="Admin" asp-controller="Job" asp-action="List">شغل های من</a>
                        </li>
                        <li class="active">
                            <a asp-area="Admin" asp-controller="Job" asp-action="Create">افزودن شغل</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- #Menu -->
    </aside>
</div>

