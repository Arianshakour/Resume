@using Resume.DLA.ViewModels.Job
@model DeleteJobViewModel


@{
    ViewData["Title"] = "حذف شغل";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <h3>ایا میخواهید شغل زیر را حذف کنید ؟</h3>
                <form asp-action="DeleteConfirm" method="post">
                    <div class="row clearfix">
                        <input type="hidden" asp-for="Id" />
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    @* <label asp-for="Title" class="form-control"></label> *@
                                    <input type="text" asp-for="Title" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button type="submit" class="btn btn-warning m-l-15 waves-effect">حذف</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>